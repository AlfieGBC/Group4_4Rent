<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:context=".adapters.MyListingsAdapter">

    <ImageView
        android:id="@+id/iv_rental_image"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_margin="8dp"
        android:src="@drawable/bedroom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="$2,000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_rental_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_num_of_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="2 Beds | 1 Bath"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_rental_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_rent" />

    <TextView
        android:id="@+id/tv_property_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Apartment"
        android:textColor="#008ba6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_rental_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_num_of_rooms" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="6767 Elbow Drive SW"
        android:textColor="#707070"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_rental_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_property_type" />

</androidx.constraintlayout.widget.ConstraintLayout>